<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/white_grey_selector_bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/rl_contains"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/setting"/>

        <TextView
            android:id="@+id/tv_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/iv_left"
            android:layout_marginLeft="5dp"
            android:text="设置"/>

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_marginRight="10dp"
            android:textColor="#ff999999"
            android:textSize="14sp"
            android:text="版本1.0"/>

        <TextView
            android:id="@+id/tv_red_dot"
            android:layout_alignBaseline="@+id/tv_left_text"
            android:layout_toRightOf="@+id/tv_left_text"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/red_dot"/>

        <ImageView
            android:src="@mipmap/arrow_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:background="#C0C0C0"
        android:layout_height="0.5dp"/>

</LinearLayout>